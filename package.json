{
  "name": "titus",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build:all": "lerna run --parallel build",
    "clean": "npm run clean --workspaces",
    "clean:all": "npm run clean:env && npm run clean",
    "clean:env": "node bin/cleanEnv.js",
    "create:env": "node bin/createEnv.js",
    "db:create-volume": "docker volume create --name titus-pg-data -d local",
    "db:delete": "npm run db:delete -w titus-db-manager",
    "db:down": "npm run db:down -w titus-db-manager",
    "db:migrate": "npm run db:migrate -w titus-db-manager",
    "db:seed": "npm run db:seed -w titus-db-manager",
    "db:server:start": "npm run db:server:start -w titus-db-manager",
    "db:truncate": "npm run db:truncate -w titus-db-manager",
    "db:up": "npm run db:up -w titus-db-manager",
    "lint:check-backend": "npm run lint -w titus-backend",
    "lint:check-backend-ts": "npm run lint -w titus-backend-typescript",
    "lint:check-db-manager": "npm run lint -w titus-db-manager",
    "lint:check-frontend": "npm run lint -w titus-frontend",
    "lint:all": "run-p --print-label lint:check*",
    "lint:fix-backend": "npm run lint:fix -w titus-backend",
    "lint:fix-backend-ts": "npm run lint:fix -w titus-backend-typescript",
    "lint:fix-db-manager": "npm run lint:fix -w titus-db-manager",
    "lint:fix-frontend": "npm run lint:fix -w titus-frontend",
    "lint:fix": "run-p --print-label lint:fix-*",
    "lint:staged": "npm run lint:staged -ws",
    "postinstall": "husky install",
    "start:all": "lerna run --parallel start",
    "start:docs": "docsify serve ./docs --port 4000",
    "test:all": "lerna run --parallel test",
    "test:related": "npm run test:related -ws",
    "deploy:ci": "lerna run deploy:ci",
    "deploy": "lerna run deploy"
  },
  "devDependencies": {
    "docsify-cli": "^4.4.3",
    "husky": "^7.0.1",
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  },
  "workspaces": [
    "packages/*",
    "lib"
  ]
}
